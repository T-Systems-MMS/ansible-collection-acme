---
extends: default
ignore: |
  galaxy.yml

rules:
  line-length: disable
  comments:
    comments-indentation: disable
    min-spaces-from-content: 1
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  colons: 
    max-spaces-before: -1
    max-spaces-after: 1
